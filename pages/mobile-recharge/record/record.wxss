.record{
  width: 100%;
  border-top:1px solid #f5f5f5;
}
.record_list{
  width:100%;
  height:50px;
  border-bottom:1px solid #f5f5f5;
  padding:13px 0 16px;

}
.list_title{
  display:inline-block;
  font-size:15px;
  color:#333;
  float:left;
  margin-left:10px;
  width:67%;
  height: 27px;
  line-height:27px;
}
.list_zhuang{
  display:inline-block;
  float:right;
  margin-right:12px;
  font-size:14px;
  color:#333;
  margin-top:1px;
  width:26%;
  height:27px;
  text-align:right;
  line-height:27px;
}
.list_time{
  display: inline-block;
  color: #ccc;
  font-size: 13px;
  margin:0px 0 0 10px;
  float: left;
  width:67%;
  height:27px;
  line-height:27px;

}
.list_price{
  display: inline-block;
  float:right; 
  margin-right:12px;
  font-size:20px;
  color:#ff614c;
  margin-top:1px;
  width:26%;
  height:27px;
  text-align:right;
  line-height:27px;
}