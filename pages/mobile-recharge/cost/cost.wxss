page {  
  display: block; 
  width: 100%;
  height:100%; 
  background-color:#f5f5f5;  
  position: relative;
}  
.import{
  width:100%; 
  overflow: hidden;
  height:55px;
  background:#fff;
  margin:5px 0;

}
.phone_number{
  display:inline-block;
  width:71%;
  height:55px;
  line-height:55px;
  background:#fff;
  float:left;
  font-size:24px;
  padding:0 0 0 10px;
  margin:0;

}
.operator{
  display:inline-block;
  width:25%;
  height:21px;
  line-height:15px;
  text-align:center;
  color:#9b9b9b;
  float:right;
  background-origin:border-box;
  font-size:12px;
  padding:0;
  margin:0;
  word-wrap:break-word;
  padding-top:21px;


}
/* 选择面值 */
#option{
  display: block;
  width:93%;
  height:auto;
  margin:0 auto;
  margin-top:10px;
}
.choose_pri{
  display: block;
  font-size: 14px;
  margin-bottom:16px;
  color: #9b9b9b;
}
button:after{
  border:0;
}
.choose_btn{
  display:inline-block; 
  width:30%;
  line-height:55px;
  border:1px solid #d6d6d6;
  margin-bottom: 10px;
  border-radius: 3px;
  font-size: 16px;
  background: #fff;
}
.choose_btn:nth-of-type(2){
  margin:0px 15px 0px 14px;
  margin-bottom: 10px;
}
.choose_btn:nth-of-type(5){
  margin:0px 15px 0px 14px;
  margin-bottom: 10px;
}
.price{
  /* display: none; */
   display:block; 
  width:98%;
  height:50px;
  background:#fff;
  color:#000;
  margin-bottom:14px;
  line-height:50px;
  padding-left:8px;
  font-size:16px;
}
/*test */
